{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "rootDirs": [],
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "tsBuildInfoFile": "dist/tsbuildinfo",
    "isolatedModules": false,
    "declaration": true,
    "declarationMap": true
  },

  "exclude": ["dist/**", "src/**/*.test.ts", "src/**/__tests__/**"]
}
