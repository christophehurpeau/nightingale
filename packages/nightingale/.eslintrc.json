{
  "extends": [
    "pob/babel",
    "pob/flow"
  ],
  "overrides": [
    {
      "files": [
        "src/**/*.test.js",
        "src/__tests__/**/*.js"
      ],
      "env": {
        "jest": true
      },
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ]
      }
    }
  ]
}
