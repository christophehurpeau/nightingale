{
  "name": "nightingale",
  "version": "9.2.3",
  "description": "Logger for browser and node",
  "keywords": ["logger"],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com:christophehurpeau/nightingale.git",
    "directory": "packages/nightingale"
  },
  "homepage": "https://github.com/christophehurpeau/nightingale",
  "engines": {
    "node": ">=8.3.0"
  },
  "browserslist": ["> 0.1%", "Firefox ESR", "not ie < 9", "not dead"],
  "main": "./index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index-browser.es.js",
  "module-dev": "./dist/index-browser-dev.es.js",
  "browser": "./dist/index-browser.cjs.js",
  "browser-dev": "./dist/index-browser-dev.cjs.js",
  "module:node": "./dist/index-node10.es.js",
  "module:node-dev": "./dist/index-node10-dev.es.js",
  "module:browser": "./dist/index-browser.es.js",
  "module:browser-dev": "./dist/index-browser-dev.es.js",
  "module:modern-browsers": "./dist/index-browsermodern.es.js",
  "module:modern-browsers-dev": "./dist/index-browsermodern-dev.es.js",
  "scripts": {
    "build": "pob-build",
    "build:definitions": "tsc -p tsconfig.build.json",
    "clean": "rm -Rf docs dist test/node6 coverage",
    "generate:api": "typedoc --gitRevision master --out docs --tsconfig tsconfig.doc.json",
    "generate:docs": "rm -Rf docs ; yarn run generate:api ; touch docs/.nojekyll && yarn run generate:test-coverage",
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_ENV=production BABEL_ENV=test jest --coverage --coverageReporters=pob-lcov-reporter --coverageDirectory=docs/coverage/",
    "lint": "eslint --ext .ts --quiet src/",
    "test": "jest",
    "test:watch": "jest",
    "watch": "pob-watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts",
      "<rootDir>/src/**/*.test.ts"
    ],
    "collectCoverageFrom": ["src/**/*.ts"],
    "moduleFileExtensions": ["ts", "js"],
    "transform": {
      "^.+\\.ts$": "babel-jest"
    }
  },
  "dependencies": {
    "nightingale-levels": "^4.2.2",
    "nightingale-logger": "^6.2.2",
    "nightingale-types": "^2.2.2"
  },
  "devDependencies": {
    "@babel/core": "7.4.4",
    "@babel/preset-env": "7.4.4",
    "@pob/eslint-config-babel": "31.0.0",
    "@pob/eslint-config-typescript": "31.1.0",
    "@types/jest": "24.0.12",
    "babel-jest": "24.7.1",
    "babel-preset-latest-node": "3.1.1",
    "babel-preset-modern-browsers": "14.0.0",
    "eslint": "5.16.0",
    "jest": "24.7.1",
    "karma": "1.5.0",
    "karma-chrome-launcher": "3.0.0",
    "karma-firefox-launcher": "1.0.1",
    "karma-ievms": "0.1.0",
    "karma-mocha": "1.3.0",
    "karma-proclaim": "1.0.0",
    "nightingale-string": "^5.2.2",
    "pob-babel": "23.16.0",
    "pob-lcov-reporter": "1.2.0",
    "prettier": "1.17.0",
    "typedoc": "0.14.2",
    "xunit-file": "1.0.0"
  }
}
