{
  "parser": "typescript-eslint-parser",
  "plugins": ["typescript"],
  "extends": ["pob/babel", "pob/typescript"],
  "overrides": [
    {
      "files": ["src/**/*.test.ts", "src/__tests__/**/*.ts"],
      "env": {
        "jest": true
      },
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ]
      }
    }
  ]
}
