{
  "name": "nightingale-example",
  "private": true,
  "version": "12.1.4",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/christophehurpeau/nightingale.git",
    "directory": "packages/nightingale-example"
  },
  "homepage": "https://github.com/christophehurpeau/nightingale",
  "type": "module",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "exports": {
    "./package.json": "./package.json",
    "./configure": {
      "node": {
        "import": "./build/configure-node14.mjs",
        "require": "./build/configure-node14.cjs"
      }
    },
    "./console": {
      "node": {
        "import": "./build/console-node14.mjs",
        "require": "./build/console-node14.cjs"
      }
    },
    "./debug": {
      "node": {
        "import": "./build/debug-node14.mjs",
        "require": "./build/debug-node14.cjs"
      }
    },
    "./errors": {
      "node": {
        "import": "./build/errors-node14.mjs",
        "require": "./build/errors-node14.cjs"
      }
    },
    "./jsonConsole": {
      "node": {
        "import": "./build/jsonConsole-node14.mjs",
        "require": "./build/jsonConsole-node14.cjs"
      }
    }
  },
  "module:node": "./build/index-node14.mjs",
  "module:aliases-node": {
    "./configure.js": "./build/configure-node14.es.js",
    "./console.js": "./build/console-node14.es.js",
    "./debug.js": "./build/debug-node14.es.js",
    "./errors.js": "./build/errors-node14.es.js",
    "./jsonConsole.js": "./build/jsonConsole-node14.es.js"
  },
  "scripts": {
    "build": "yarn clean:build && rollup --config rollup.config.mjs",
    "clean": "yarn clean:build",
    "clean:build": "rm -Rf build",
    "lint": "yarn run lint:eslint",
    "lint:eslint": "cd ../.. && yarn run eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet packages/nightingale-example",
    "start": "yarn clean:build && rollup --config rollup.config.mjs --watch",
    "watch": "pob-watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "pob": {
    "babelEnvs": [
      {
        "target": "node",
        "version": "14",
        "formats": [
          "cjs",
          "es"
        ]
      }
    ],
    "entries": [
      "configure",
      "console",
      "debug",
      "errors",
      "jsonConsole"
    ]
  },
  "dependencies": {
    "nightingale": "12.1.4",
    "nightingale-console": "12.1.4",
    "nightingale-console-output": "12.1.4",
    "nightingale-json-formatter": "12.1.4",
    "nightingale-string": "12.1.4",
    "nightingale-types": "12.1.4"
  },
  "devDependencies": {
    "@babel/core": "7.17.9",
    "pob-babel": "32.2.0",
    "typescript": "4.6.3"
  }
}
