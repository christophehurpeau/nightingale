{
  "extends": [
    "@pob/root/tsconfigs/strict.json",
    "@pob/root/tsconfigs/targets/rollup-babel-with-dom.json"
  ],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/definitions",
    "tsBuildInfoFile": "node_modules/.cache/tsc/tsbuildinfo",
    "noEmitOnError": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "composite": true,

    "paths": {
      "nightingale-level-names": ["../../packages/nightingale-level-names/lib"],
      "nightingale-level-names/*": [
        "../../packages/nightingale-level-names/lib/*"
      ],
      "nightingale-types": ["../../packages/nightingale-types/src"],
      "nightingale-types/*": ["../../packages/nightingale-types/src/*"]
    }
  },
  "references": [{ "path": "../../packages/nightingale-types/tsconfig.json" }]
}
