{
  "name": "nightingale-slack",
  "version": "3.0.0",
  "description": "Slack handler for nightingale",
  "keywords": ["nightingale", "nightingale-handler"],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "git@github.com:christophehurpeau/nightingale.git",
  "homepage": "https://github.com/christophehurpeau/nightingale",
  "engines": { "node": ">=6.5.0" },
  "main": "./index.js",
  "typings": "./dist/index.d.ts",
  "module:node": "./dist/index-node8.es.js",
  "module:node-dev": "./dist/index-node8-dev.es.js",
  "module:aliases-node": { "./createBody.js": "./dist/createBody-node8.es.js" },
  "module:aliases-node-dev": { "./createBody.js": "./dist/createBody-node8-dev.es.js" },
  "scripts": {
    "build": "pob-build && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "clean": "rm -Rf docs dist test/node6 coverage",
    "generate:test-coverage":
      "rm -Rf docs/coverage/ ; NODE_ENV=production BABEL_ENV=test jest --coverage --coverageReporters=lcov --coverageDirectory=docs/coverage/",
    "lint": "tsc --noEmit && eslint --ext .ts  src/",
    "test": "jest",
    "watch": "pob-watch"
  },
  "prettier": { "trailingComma": "all", "singleQuote": true, "printWidth": 100 },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testMatch": ["<rootDir>/src/**/__tests__/**/*.ts", "<rootDir>/src/**/*.test.ts"],
    "collectCoverageFrom": ["src/**/*.ts"],
    "moduleFileExtensions": ["ts", "js"],
    "transform": { "^.+\\.ts$": "babel-jest" }
  },
  "dependencies": {
    "nightingale-levels": "^2.0.0",
    "nightingale-markdown-formatter": "^1.0.0",
    "nightingale-raw-formatter": "^2.0.0",
    "nightingale-types": "^0.0.0",
    "request": "^2.85.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@types/jest": "^22.2.3",
    "@types/request": "^2.47.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-preset-latest-node": "^2.0.0-beta.2",
    "babel-register": "^6.24.0",
    "eslint": "^4.19.1",
    "eslint-config-pob": "^19.0.2",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-typescript": "^0.11.0",
    "jest": "^22.4.3",
    "pob-babel": "^21.2.4",
    "prettier": "^1.12.1",
    "typescript": "^2.8.3",
    "typescript-eslint-parser": "^15.0.0",
    "xunit-file": "^1.0.0"
  }
}
