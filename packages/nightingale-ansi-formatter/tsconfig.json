{
  "extends": [
    "@pob/root/tsconfigs/strict.json",
    "@pob/root/tsconfigs/targets/rollup-babel-with-dom.json"
  ],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/definitions",
    "tsBuildInfoFile": "node_modules/.cache/tsc/tsbuildinfo",
    "noEmitOnError": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "composite": true,

    "paths": {
      "nightingale-types": ["../../packages/nightingale-types/src"],
      "nightingale-types/*": ["../../packages/nightingale-types/src/*"],
      "nightingale-formatter": ["../../packages/nightingale-formatter/src"],
      "nightingale-formatter/*": ["../../packages/nightingale-formatter/src/*"]
    }
  },
  "references": [
    { "path": "../../packages/nightingale-types/tsconfig.json" },
    { "path": "../../packages/nightingale-formatter/tsconfig.json" }
  ]
}
