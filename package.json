{
  "name": "nightingale-monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "Logger for browser and node, see [nightingale](packages/nightingale) to get started !",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/nightingale.git",
  "homepage": "https://github.com/christophehurpeau/nightingale",
  "type": "commonjs",
  "engines": {
    "node": ">=12.10.0"
  },
  "packageManager": "yarn@3.0.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -Av run build && yarn run build:definitions && yarn run generate:docs",
    "build:definitions": "tsc -b tsconfig.build.json",
    "checks": "node scripts/check-packages.js",
    "generate:api": "typedoc --tsconfig tsconfig.doc.json",
    "generate:docs": "rm -Rf docs ; yarn run generate:api ; touch docs/.nojekyll",
    "generate:test-coverage": "lerna run --parallel --ignore \"*-example\" generate:test-coverage",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:eslint": "eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet .",
    "lint:prettier": "prettier --check .",
    "postinstall": "pob-root-postinstall",
    "preversion": "yarn run lint && yarn run build && repository-check-dirty",
    "release": "GH_TOKEN=$POB_GITHUB_TOKEN lerna version --conventional-commits --conventional-graduate --create-release=github -m 'chore: release' && lerna publish from-git",
    "test": "yarn workspaces foreach --parallel -Av run test",
    "tsc": "tsc -b",
    "watch": "yarn workspaces foreach --parallel --exclude \"*-example\" -Av run watch",
    "watch:lerna": "lerna run --parallel --ignore \"*-example\" watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "resolutions": {
    "@types/node": "14.17.24"
  },
  "resolutionsExplained": {
    "@types/node": "Avoid problems in typescript with several versions of @types/node"
  },
  "devDependencies": {
    "@pob/commitlint-config": "3.1.1",
    "@pob/eslint-config": "45.0.3",
    "@pob/eslint-config-typescript": "45.0.3",
    "@pob/lerna-light": "4.1.0",
    "@pob/root": "5.4.2",
    "@types/node": "14.17.24",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "check-package-dependencies": "2.0.2",
    "eslint": "7.32.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-unicorn": "34.0.1",
    "prettier": "2.4.1",
    "typedoc": "0.22.4",
    "typescript": "4.4.4"
  }
}
