{
  "name": "nightingale-monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "Logger for browser and node, see [nightingale](packages/nightingale) to get started !",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/nightingale.git",
  "homepage": "https://github.com/christophehurpeau/nightingale",
  "type": "module",
  "engines": {
    "node": ">=14.13.1"
  },
  "packageManager": "yarn@3.2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn clean:build && rollup --config rollup.config.mjs && yarn run build:definitions",
    "build:definitions": "tsc -b tsconfig.build.json",
    "checks": "node scripts/check-packages.js",
    "clean:build": "(rm -Rf packages/*/dist packages/*/build) || true",
    "generate:api": "typedoc --tsconfig tsconfig.doc.json",
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageReporters=lcov --coverageDirectory=docs/coverage/",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:eslint": "NODE_OPTIONS=--max_old_space_size=4096 eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet .",
    "lint:prettier": "pob-root-prettier --check .",
    "lint:prettier:fix": "pob-root-prettier --write .",
    "postinstall": "pob-root-postinstall",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "tsc": "tsc -b",
    "watch": "yarn clean:build && rollup --config rollup.config.mjs --watch",
    "watch:lerna": "lerna run --parallel --ignore \"*-example\" watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^(nightingale-.*)$": "<rootDir>/packages/$1/src/index.ts"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testEnvironment": "node",
    "cacheDirectory": "./node_modules/.cache/jest",
    "testMatch": [
      "<rootDir>/packages/*/(src|lib)/**/__tests__/**/*.(ts|js|cjs|mjs)",
      "<rootDir>/packages/*/(src|lib)/**/*.test.(ts|js|cjs|mjs)"
    ]
  },
  "resolutions": {
    "@types/node": "14.18.17"
  },
  "resolutionsExplained": {
    "@types/node": "Avoid problems in typescript with several versions of @types/node"
  },
  "devDependencies": {
    "@babel/core": "7.17.10",
    "@pob/commitlint-config": "4.2.0",
    "@pob/eslint-config": "49.1.0",
    "@pob/eslint-config-typescript": "49.3.0",
    "@pob/lerna-light": "5.1.0",
    "@pob/root": "6.19.1",
    "@types/jest": "27.5.0",
    "@types/node": "14.18.17",
    "check-package-dependencies": "3.6.0",
    "eslint": "8.15.0",
    "jest": "28.1.0",
    "pob-babel": "33.3.0",
    "typedoc": "0.22.15",
    "typescript": "4.6.4"
  }
}
