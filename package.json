{
  "name": "nightingale",
  "private": true,
  "version": "0.0.0",
  "description": "Logger for browser and node",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "git@github.com:christophehurpeau/nightingale.git",
  "homepage": "https://github.com/christophehurpeau/nightingale",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "generate:docs": "lerna run --parallel --ignore \"*-example\" generate:docs",
    "lint": "lerna run --stream lint",
    "postcheckout": "yarnhook",
    "postmerge": "yarnhook",
    "postrewrite": "yarnhook",
    "precommit": "lint-staged",
    "preversion": "yarn run lint && yarn run build && yarn run generate:docs",
    "release": "lerna publish --conventional-commits -m 'chore: release'",
    "test": "lerna run --stream test",
    "typescript-check": "lerna run --stream typescript-check",
    "watch": "lerna run --parallel --ignore \"*-example\" watch"
  },
  "lint-staged": {
    "{package.json,packages/*/package.json,,.eslintrc.json}": [
      "prettier --write",
      "git add"
    ],
    "packages/*/lib/**/*.json": [
      "prettier --write",
      "git add"
    ],
    "packages/*/lib/**/*.js": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "7.1.1",
    "@commitlint/config-conventional": "7.1.1",
    "husky": "0.14.3",
    "lerna": "3.2.1",
    "lint-staged": "7.2.2",
    "pob-release": "4.4.0",
    "yarnhook": "0.3.0"
  }
}
