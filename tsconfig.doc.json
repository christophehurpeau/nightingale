{
  "files": [],

  "exclude": [
    "**/node_modules/**",
    "**/src/**/*.test.ts",
    "**/src/**/__tests__/**"
  ],

  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true
  },

  "references": [
    { "path": "packages/nightingale-levels/tsconfig.json" },
    { "path": "packages/nightingale-types/tsconfig.json" },
    { "path": "packages/nightingale-logger/tsconfig.json" },
    { "path": "packages/nightingale-sentry/tsconfig.json" },
    { "path": "packages/nightingale-web-processor/tsconfig.json" },
    { "path": "packages/nightingale-winston-adapter/tsconfig.json" },
    { "path": "packages/nightingale/tsconfig.json" },
    { "path": "packages/nightingale-app-console/tsconfig.json" },
    { "path": "packages/nightingale-app-react-native/tsconfig.json" },
    { "path": "packages/nightingale-slack/tsconfig.json" },
    { "path": "packages/nightingale-unit-testing/tsconfig.json" }
  ],

  "typedocOptions": {
    "entryPoints": [
      "packages/nightingale-unit-testing/src/index.ts",
      "packages/nightingale-slack/src/index.ts",
      "packages/nightingale-app-react-native/src/index.ts",
      "packages/nightingale-app-console/src/index.ts",
      "packages/nightingale/src/index.ts",
      "packages/nightingale-winston-adapter/src/index.ts",
      "packages/nightingale-web-processor/src/index.ts",
      "packages/nightingale-sentry/src/index.ts",
      "packages/nightingale-logger/src/index.ts",
      "packages/nightingale-types/src/index.ts",
      "packages/nightingale-levels/src/index.ts"
    ],
    "exclude": ["**/*.test.ts", "**/__tests__/**"],
    "readme": "packages/nightingale/README.md",
    "out": "docs",
    "excludePrivate": true,
    "gitRevision": "master"
  }
}
